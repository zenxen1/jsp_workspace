<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board">
  <sql id="select">
  	select * from board
  </sql>
  
  <select id="selectAll" resultType="Board">
  	<include refid="select"/>order by board_id desc
  </select>
  
  <!-- 한건 조회 -->
  <select id="selectOne" parameterType="int" resultType="Board">
  	<include refid="select"/> where board_id=#{board_id}
  </select>
  
  <!-- 등록 -->
  <insert id="insert" parameterType="Board">
  	insert int board (board_id,writer,title,content) values (seq_board.nextval,#{writer},#{title},#{content})
  </insert>
  
  <!-- 수정 -->
  <update id="update" parameterType="Board">
  	update board set writer = #{writer}, title = #{title}, content = #{content} where board_id = #{board_id}
  </update>
  
  <!-- 삭제 -->
  <delete id="delete" parameterType="int">
  	delete from board where board_id=#{board_id}
  </delete>
</mapper>